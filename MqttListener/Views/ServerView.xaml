<UserControl x:Class="MqttListener.Views.ServerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MqttListener.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal">
            <TextBlock Text="{Binding Title}" 
                       FontSize="24"
                       Margin="8 0"></TextBlock>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom"
                    Margin="8">
            <Button Content="Disconnect"
                    HorizontalAlignment="Right"
                    Command="{Binding DisconnectCommand}"></Button>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <TextBlock Text="Last topic:" Margin="4 0"></TextBlock>
            <TextBlock Text="{Binding LastTopic}" Margin="4 0"></TextBlock>
            <TextBlock Text=":" Margin="4 0"></TextBlock>
            <TextBlock Text="{Binding LastMessage}" Margin="4 0"></TextBlock>
        </StackPanel>
        <TreeView ItemsSource="{Binding Root}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Child}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text=":" />
                        <TextBlock Text="{Binding Message}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</UserControl>